!!! 5
%html
  %head
    %title Events
    %link{ :href => '/stylesheet.css', :rel => 'stylesheet', :type => 'text/css', :media => 'screen', :charset => 'utf-8' }
    %meta{ :name => 'viewport', :content => 'width=620; user-scalable=false' } 
  %body
    %header
      %h1 #{@calendar_name}
      %h2 The Next #{options.lookahead} Days
    -for event in @events
      .event
        .date
          .month=to_timezone(event.start_time).strftime '%a'
          .day=to_timezone(event.start_time).strftime '%d'
        .details
          %h3=h event.summary
          -if !event.description.empty?
            .description=h event.description
          %dl
            -if !event.location.empty?
              %dt Where
              %dd=h event.location
            %dt When
            %dd=format_time_range(event.start_time, event.finish_time)
    %footer
      %a{ :href => gcal_url }
        Download (iCal)
      %a{ :href => gcal_feed_url }
        Subscribe to Feed
      .add
        Want to add your events?
        %a{ :href => 'http://twitter.com/Aupajo' }
          @Aupajo
      .fork
        Doesn't work in your browser?
        %a{ :href => 'http://github.com/Aupajo/sinatra-gcal' }
          Fork and fix it.
    =erb :analytics